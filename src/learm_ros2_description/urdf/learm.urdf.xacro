<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="learm">

  <!-- Include some basic inertial shapes for reuse. -->
  <xacro:include filename="macros.xacro" />

  <link name="base_link">
    <visual>
      <geometry>
        <mesh filename="package://learm_ros2_description/meshes/base.stl"/>
      </geometry>
      <material name="black"/>
    </visual>
    <collision>
      <geometry>
        <mesh filename="package://learm_ros2_description/meshes/base.stl"/>
      </geometry>
    </collision>
    <xacro:inertial_box mass="500" x="0.28291523" y="0.16" z="0.0795">
      <origin xyz="0 0 ${0.0795/2}" rpy="0 0 0"/>
    </xacro:inertial_box>
  </link>

  <joint name="shoulder_pan" type="revolute">
    <parent link="base_link"/>
    <child link="shoulder_link"/>
    <origin xyz="0 0 0.059"/>
    <axis xyz="0 0 1"/>
    <limit lower="-1.57" upper="1.57" effort="1000" velocity="0.5"/>
  </joint>

  <link name="shoulder_link">
    <visual>
      <geometry>
        <mesh filename="package://learm_ros2_description/meshes/shoulder.stl"/>
      </geometry>
      <material name="green"/>
    </visual>
    <collision>
      <geometry>
        <mesh filename="package://learm_ros2_description/meshes/shoulder.stl"/>
      </geometry>
    </collision>
    <xacro:inertial_box mass="50" x="0.08100046" y="0.081" z="0.03901956">
      <origin xyz="0 0 ${0.03901956/2}" rpy="0 0 0"/>
    </xacro:inertial_box>
  </link>

  <joint name="shoulder_lift" type="revolute">
    <parent link="shoulder_link"/>
    <child link="humerus_link"/>
    <origin xyz="-0.010 0 0.028"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1.57" upper="1.57" effort="1000" velocity="0.5"/>
  </joint>

  <link name="humerus_link">
    <visual>
      <geometry>
        <mesh filename="package://learm_ros2_description/meshes/humerus.stl"/>
      </geometry>
      <material name="blue"/>
    </visual>
    <collision>
      <geometry>
        <mesh filename="package://learm_ros2_description/meshes/humerus.stl"/>
      </geometry>
    </collision>
    <xacro:inertial_box mass="200" x="0.025" y="0.056" z="0.12900001">
      <origin xyz="0 0 ${0.12900001/2}" rpy="0 0 0"/>
    </xacro:inertial_box>
  </link>

  <joint name="elbow" type="revolute">
    <parent link="humerus_link"/>
    <child link="forearm_link"/>
    <origin xyz="0 0 0.105"/>
    <axis xyz="0 -1 0"/>
    <limit lower="-1.57" upper="1.57" effort="1000" velocity="0.5"/>
  </joint>

  <link name="forearm_link">
    <visual>
      <geometry>
        <mesh filename="package://learm_ros2_description/meshes/forearm.stl"/>
      </geometry>
      <material name="blue"/>
    </visual>
    <collision>
      <geometry>
        <mesh filename="package://learm_ros2_description/meshes/forearm.stl"/>
      </geometry>
    </collision>
    <xacro:inertial_box mass="200" x="0.025" y="0.056" z="0.11098956">
      <origin xyz="0 0 ${0.11098956/2}" rpy="0 0 0"/>
    </xacro:inertial_box>
  </link>

  <joint name="wrist_flex" type="revolute">
    <parent link="forearm_link"/>
    <child link="wrist_link"/>
    <origin xyz="0 0 0.090"/>
    <axis xyz="0 -1 0"/>
    <limit lower="-1.57" upper="1.57" effort="1000" velocity="0.5"/>
  </joint>

  <link name="wrist_link">
    <visual>
      <geometry>
        <mesh filename="package://learm_ros2_description/meshes/wrist.stl"/>
      </geometry>
      <material name="blue"/>
    </visual>
    <collision>
      <geometry>
        <mesh filename="package://learm_ros2_description/meshes/wrist.stl"/>
      </geometry>
    </collision>
    <xacro:inertial_box mass="200" x="0.0583" y="0.0456" z="0.0711">
      <origin xyz="0 0 ${0.0711/2}" rpy="0 0 0"/>
    </xacro:inertial_box>
  </link>

  <joint name="wrist_roll" type="revolute">
    <parent link="wrist_link"/>
    <child link="hand_link"/>
    <origin xyz="0 0 0.060"/>
    <axis xyz="0 0 1"/>
    <limit lower="-1.57" upper="1.57" effort="1000" velocity="0.5"/>
  </joint>

  <link name="hand_link">
    <visual>
      <geometry>
        <mesh filename="package://learm_ros2_description/meshes/hand.stl"/>
      </geometry>
      <material name="black"/>
    </visual>
    <collision>
      <geometry>
        <mesh filename="package://learm_ros2_description/meshes/hand.stl"/>
      </geometry>
    </collision>
    <xacro:inertial_box mass="200" x="0.05439999" y="0.05563842" z="0.056">
      <origin xyz="0 0 ${0.056/2}" rpy="0 0 0"/>
    </xacro:inertial_box>
  </link>

  <!-- camera on hand! -->

  <xacro:include filename="camera.xacro" />

  <!-- Gripper specific links: -->
  <link name="grip_left_link">
    <visual>
      <geometry>
        <mesh filename="package://learm_ros2_description/meshes/carpal-left.stl"/>
      </geometry>
      <material name="orange"/>
    </visual>
    <collision>
      <geometry>
        <mesh filename="package://learm_ros2_description/meshes/carpal-left.stl"/>
      </geometry>
    </collision>
    <xacro:inertial_box mass="10" x="0.003" y="0.02781075" z="0.04949519">
      <origin xyz="0 0 ${0.04949519/2}" rpy="0 0 0"/>
    </xacro:inertial_box>
  </link>

  <link name="grip_right_link">
    <visual>
      <geometry>
        <mesh filename="package://learm_ros2_description/meshes/carpal-right.stl"/>
      </geometry>
      <material name="orange"/>
    </visual>
    <collision>
      <geometry>
        <mesh filename="package://learm_ros2_description/meshes/carpal-right.stl"/>
      </geometry>
    </collision>
    <xacro:inertial_box mass="10" x="0.00824992" y="0.02793942" z="0.04944835">
      <origin xyz="0 0 ${0.04944835/2}" rpy="0 0 0"/>
    </xacro:inertial_box>
  </link>

  <link name="tendon_left_link">
    <visual>
      <geometry>
        <mesh filename="package://learm_ros2_description/meshes/tendon.stl"/>
      </geometry>
      <material name="orange"/>
    </visual>
    <collision>
      <geometry>
        <mesh filename="package://learm_ros2_description/meshes/tendon.stl"/>
      </geometry>
    </collision>
    <xacro:inertial_box mass="5" x="0.012" y="0.00710179" z="0.03599977">
      <origin xyz="0 0 ${0.03599977/2}" rpy="0 0 0"/>
    </xacro:inertial_box>
  </link>

  <link name="tendon_right_link">
    <visual>
      <geometry>
        <mesh filename="package://learm_ros2_description/meshes/tendon.stl"/>
      </geometry>
      <material name="orange"/>
    </visual>
    <collision>
      <geometry>
        <mesh filename="package://learm_ros2_description/meshes/tendon.stl"/>
      </geometry>
    </collision>
    <xacro:inertial_box mass="5" x="0.012" y="0.00710179" z="0.03599977">
      <origin xyz="0 0 ${0.03599977/2}" rpy="0 0 0"/>
    </xacro:inertial_box>
  </link>

  <link name="finger_left_link">
    <visual>
      <geometry>
        <mesh filename="package://learm_ros2_description/meshes/finger.stl"/>
      </geometry>
      <material name="red"/>
    </visual>
    <collision>
      <geometry>
        <mesh filename="package://learm_ros2_description/meshes/finger.stl"/>
      </geometry>
    </collision>
    <xacro:inertial_box mass="10" x="0.006" y="0.02043952" z="0.05933856">
      <origin xyz="0 0 ${0.05933856/2}" rpy="0 0 0"/>
    </xacro:inertial_box>
  </link>

  <link name="finger_right_link">
    <visual>
      <origin rpy="0 0 ${pi}"/>
      <geometry>
        <mesh filename="package://learm_ros2_description/meshes/finger.stl"/>
      </geometry>
      <material name="red"/>
    </visual>
    <collision>
      <origin rpy="0 0 ${pi}"/>
      <geometry>
        <mesh filename="package://learm_ros2_description/meshes/finger.stl"/>
      </geometry>
    </collision>
    <xacro:inertial_box mass="10" x="0.006" y="0.02043952" z="0.05933856">
      <origin xyz="0 0 ${0.05933856/2}" rpy="0 0 0"/>
    </xacro:inertial_box>
  </link>

  <!-- Gripper specific joints: -->
  <joint name="grip_left" type="revolute">
    <parent link="hand_link"/>
    <child link="grip_left_link"/>
    <origin xyz="0 +0.015 0.030" rpy="-1.57 0 0"/>
    <axis xyz="-1 0 0"/>
    <limit lower="-1.57" upper="0" effort="1000" velocity="0.5"/>
  </joint>
  <joint name="grip_right" type="revolute">
    <parent link="hand_link"/>
    <child link="grip_right_link"/>
    <origin xyz="0 -0.015 0.030" rpy="1.57 0 0"/>
    <axis xyz="-1 0 0"/>
    <limit lower="0" upper="1.57" effort="1000" velocity="0.5"/>
    <mimic joint="grip_left" multiplier="-1"/>
  </joint>
  <joint name="tendon_left" type="revolute">
    <parent link="hand_link"/>
    <child link="tendon_left_link"/>
    <origin xyz="0 +0.005 0.050" rpy="-1.57 0 0"/>
    <axis xyz="-1 0 0"/>
    <limit lower="-1.57" upper="0" effort="1000" velocity="0.5"/>
    <mimic joint="grip_left"/>
  </joint>
  <joint name="tendon_right" type="revolute">
    <parent link="hand_link"/>
    <child link="tendon_right_link"/>
    <origin xyz="0 -0.005 0.050" rpy="1.57 0 0"/>
    <axis xyz="-1 0 0"/>
    <limit lower="0" upper="1.57" effort="1000" velocity="0.5"/>
    <mimic joint="grip_left" multiplier="-1"/>
  </joint>
  <joint name="finger_left" type="revolute">
    <parent link="grip_left_link"/>
    <child link="finger_left_link"/>
    <origin xyz="0 0 0.030" rpy="1.57 0 0"/>
    <axis xyz="-1 0 0"/>
    <limit lower="-1.57" upper="0" effort="1000" velocity="0.5"/>
    <mimic joint="grip_left" multiplier="-1"/>
  </joint>
  <joint name="finger_right" type="revolute">
    <parent link="grip_right_link"/>
    <child link="finger_right_link"/>
    <origin xyz="0 0 0.030" rpy="-1.57 0 0"/>
    <axis xyz="-1 0 0"/>
    <limit lower="0" upper="1.57" effort="1000" velocity="0.5"/>
    <mimic joint="grip_left"/>
  </joint>
</robot>
